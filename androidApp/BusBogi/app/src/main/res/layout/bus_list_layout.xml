<?xml version="1.0" encoding="utf-8"?>
<com.project.busbogi.main.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/busNumberBackground"
    android:focusableInTouchMode="false"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/busNumber"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="busNumber"
        android:textColor="#F7000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/busStatus"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center"
        android:textSize="24sp" />
</com.project.busbogi.main.CheckableLinearLayout>